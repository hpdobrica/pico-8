--bullet


bullets = {}

muzzle_size=0

bullet_tpl = {
	dy=-4
}

function bullet_update()
	
	if btnp(5) then
		local b={
			x=ship.x,
			y=ship.y-5,
			dy=bullet_tpl.dy
		}
		add(bullets,b)
		muzzle_size = 3
		sfx(0)
	end
	
	for i=1,#bullets do
		local b=bullets[i]
		
		if b !=nil and b.y<0 then
			del(bullets,b)
		end
	end
	
	for i=1,#bullets do
		local b=bullets[i]
		b.y+=b.dy
	end
	
	if muzzle_size > 0 then
		muzzle_size = muzzle_size-3/4
	end
end

function bullet_draw()
	print(#bullets)
	for i=1,#bullets do
		local b=bullets[i]
		spr(16,b.x,b.y)
	end
	
	if muzzle_size > 1 then 
		circfill(ship.x+4,ship.y-4,
			muzzle_size,7)
	end
end
