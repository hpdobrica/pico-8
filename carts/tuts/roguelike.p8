--gameplay

function moveplayer(dx,dy)
	local destx,desty=p_x+dx,p_y+dy
	local tle=mget(destx,desty)
	
	if dx<0 then
		p_flip=true
	elseif dx>0 then
		p_flip=false
	end
		
	if fget(tle,0) then
		--wall
		p_sox=dx*8
		p_soy=dy*8
		p_ox=0
		p_oy=0
		_upd=update_pturn
		p_mov=mov_bump
		return
	end
	
	
	p_x+=dx
	p_y+=dy
	
	p_sox=-dx*8
	p_soy=-dy*8
	p_ox=p_sox
	p_oy=p_soy
	_upd=update_pturn
	p_mov=mov_walk
end
